FROM alpine:edge AS base
RUN apk add \
      bash \
      bash-completion \
      bash-doc \
      bridge-utils-doc \
      coreutils \
      coreutils-doc \
      curl \
      curl-doc \
      db-doc \
      dhcping \
      dhcping-doc \
      diffutils \
      diffutils-doc \
      ethtool \
      ethtool-bash-completion \
      file \
      file-doc \
      findutils \
      findutils-doc \
      fping \
      fping-doc \
      grep \
      grep-doc \
      htop \
      htop-doc \
      iftop \
      ipcalc \
      iproute2 \
      iproute2-bash-completion \
      iproute2-doc \
      iproute2-minimal \
      iproute2-ss \
      iproute2-tc \
      iptables \
      iptables-doc \
      iptables-openrc \
      iputils \
      iputils-arping \
      iputils-clockdiff \
      iputils-ping \
      iputils-tracepath \
      jq \
      jq-doc \
      less \
      less-doc \
      lsof \
      lsof-doc \
      man-db \
      man-pages \
      mtr \
      mtr-bash-completion \
      mtr-doc \
      netcat-openbsd \
      netcat-openbsd-doc \
      nftables \
      nftables-doc \
      nload \
      nload-doc \
      nmap \
      nmap-doc \
      nmap-scripts \
      pciutils \
      pciutils-doc \
      procps-ng \
      procps-ng-doc \
      sed \
      sed-doc \
      strace \
      sudo \
      sudo-doc \
      tcpdump \
      tcpdump-doc \
      tmux \
      tmux-doc \
      util-linux \
      util-linux-bash-completion \
      util-linux-doc \
      util-linux-login \
      util-linux-misc \
      uuidgen \
      vim \
      vim-doc \
      vimdiff \
      wget \
      wget-doc \
      which \
      which-doc \
      whois \
      whois-doc \
  && echo "source /etc/bash/bash_completion.sh" >> /root/.bash_profile \
  && sed -i'' -e 's#/bin/ash#/bin/bash#p' /etc/passwd \
  && true
WORKDIR /root
CMD ["sleep", "infinity"]
